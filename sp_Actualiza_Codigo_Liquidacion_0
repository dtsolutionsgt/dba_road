ALTER PROCEDURE [dbo].[sp_Actualiza_Codigo_Liquidacion_0]
    -- Add the parameters for the stored procedure here
    @CODIGO_LIQUIDACION AS INT
AS
BEGIN
    
    SET NOCOUNT ON;
    
    UPDATE D_FACTURA SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE P_INVENTARIO_RUTA SET CODIGOLIQUIDACION = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE P_INVENTARIO_BARRAS_RUTA  SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE D_MOV SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION = @CODIGO_LIQUIDACION
    UPDATE D_COBRO SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION = @CODIGO_LIQUIDACION
    UPDATE D_CXC SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE D_NOTACRED SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE D_DEPOS SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE P_STOCK  SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION = @CODIGO_LIQUIDACION
    UPDATE P_STOCKB  SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE P_STOCK_PALLET  SET CODIGOLIQUIDACION  = 0 WHERE CODIGOLIQUIDACION =@CODIGO_LIQUIDACION
    UPDATE P_LIQUIDACION SET ESTADO='NUEVA' WHERE CODIGO=@CODIGO_LIQUIDACION

END

 

GO
