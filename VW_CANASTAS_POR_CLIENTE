/****** Object:  View [dbo].[VW_CANASTAS_POR_CLIENTE]    Script Date: 15/09/2021 09:06:32 ******/
SET ANSI_NULLS ON
GO

SET QUOTED_IDENTIFIER ON
GO

CREATE VIEW [dbo].[VW_CANASTAS_POR_CLIENTE]
AS
SELECT dbo.P_CANASTA_CLIENTE.CODIGO_DCANASTA_CLI, dbo.P_CANASTA_CLIENTE.RUTA AS CODIGO_RUTA, dbo.P_RUTA.NOMBRE AS NOMBRE_RUTA, dbo.P_CANASTA_CLIENTE.CLIENTE AS CODIGO_CLIENTE,
dbo.P_CLIENTE.NOMBRE AS NOMBRE_CLIENTE, dbo.P_CANASTA_CLIENTE.PRODUCTO, dbo.P_CANASTA_CLIENTE.CANTIDAD, dbo.P_CANASTA_CLIENTE.VENDEDOR AS CODIGO_VENDEDOR,
dbo.P_VENDEDOR.NOMBRE AS NOMBRE_VENDEDOR
FROM dbo.P_RUTA INNER JOIN
dbo.P_CANASTA_CLIENTE INNER JOIN
dbo.P_CLIENTE ON dbo.P_CANASTA_CLIENTE.CLIENTE = dbo.P_CLIENTE.CODIGO ON dbo.P_RUTA.CODIGO = dbo.P_CANASTA_CLIENTE.RUTA INNER JOIN
dbo.P_VENDEDOR ON dbo.P_CANASTA_CLIENTE.VENDEDOR = dbo.P_VENDEDOR.CODIGO
GO
